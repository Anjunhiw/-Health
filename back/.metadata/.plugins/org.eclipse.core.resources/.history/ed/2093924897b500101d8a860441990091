<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.Mapper.UserMapper">

	<insert id="InsertUser" parameterType="com.example.demo.Model.User">
	    INSERT INTO users (user_id, password, name, contact, email, birthdate, address, gender)
	    VALUES (#{user_id}, #{password}, #{name}, #{contact}, #{email}, #{birthdate}, #{address}, #{gender})
	</insert>
	
	<select id="SelectUser" resultType="com.example.demo.Model.User">
	    SELECT user_id, password FROM users
	</select>
	
	<select id="findByUserId" resultType="com.example.demo.Model.User" parameterType="String">
	    SELECT * FROM users WHERE user_id = #{userId}
	</select>

</mapper>
